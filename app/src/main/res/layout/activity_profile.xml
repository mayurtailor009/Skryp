<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f5"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            style="@style/tv_heading"
            android:layout_marginTop="15dp"
            android:text="Personal Details"
            android:textColor="@color/theme_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/tablebgtop"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/tv_normal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Name: " />

            <EditText
                android:id="@+id/et_name"
                style="@style/et_style"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="7"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tablebgmid"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/tv_normal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Email: " />

            <EditText
                android:id="@+id/et_email"
                style="@style/et_style"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="7"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tablebgbottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/tv_normal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Password:" />

            <EditText
                android:id="@+id/et_password"
                style="@style/et_style"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="7"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_tuto"
            style="@style/btn_style"
            android:layout_width="fill_parent"
            android:layout_marginTop="25dp"
            android:text="VIEW TUTORIAL"
            android:textSize="20sp" />

    </LinearLayout>


    <include layout="@layout/footer" />
</LinearLayout>
